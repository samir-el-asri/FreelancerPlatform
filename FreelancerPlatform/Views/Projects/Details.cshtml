@model FreelancerPlatform.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Freelancer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Freelancer.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>

    <h4>List of tasks:</h4>
    <ul>
        @foreach (FreelancerPlatform.Models.Task t in Model.Tasks)
        {
            <li>@Html.DisplayFor(tTitle => t.Title)</li>
        }
    </ul>

    <h4>Comments:</h4>
    <ul>
        @foreach (var comment in Model.Comments)
        {
            <li>
                <b>Comment:</b> @comment.Text <br />
            </li>
        }
    </ul>

    <h4>Add a comment:</h4>
    <form asp-controller="Projects" asp-action="CreateComment" method="post">
        <input type="hidden" name="ProjectId" value="@Model.id" />
        <div class="form-group">
            <label for="Text">Comment: </label>
            <textarea name="Text" class="form-control"></textarea>
        </div>
        <input type="submit" value="Post comment" class="btn btn-primary" />
    </form>
</div>




<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
